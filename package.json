{
  "name": "@lokiverse/bus",
  "version": "0.1.0",
  "description": "TypeScript-first bus",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/main.d.ts",
      "default": "./dist/types/main.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.18.1"
  },
  "scripts": {
    "build": "rollup -c",
    "build:api": "api-extractor run --local --verbose",
    "build:api:prod": "api-extractor run --verbose",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm test",
    "check:api": "npm run build && npm run build:api:prod",
    "bench": "cd benchmarks && pnpm bench:redis && pnpm bench:codecs",
    "bench:all": "cd benchmarks && pnpm bench:all",
    "bench:redis": "cd benchmarks && pnpm bench:redis",
    "bench:codecs": "cd benchmarks && pnpm bench:codecs",
    "bench:bus": "cd benchmarks && pnpm bench:bus",
    "bench:transport": "cd benchmarks && pnpm bench:transport",
    "bench:bandwidth": "cd benchmarks && pnpm bench:bandwidth"
  },
  "keywords": [
    "typescript",
    "event-bus",
    "event-emitter",
    "state-management",
    "middleware",
    "typed-events",
    "pub-sub"
  ],
  "author": "Loik F. (https://github.com/Lokicoule)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lokicoule-stack/bus.git"
  },
  "bugs": {
    "url": "https://github.com/lokicoule-stack/bus/issues"
  },
  "homepage": "https://github.com/lokicoule-stack/bus#readme",
  "peerDependencies": {
    "redis": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "redis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@eslint/js": "^9.16.0",
    "@microsoft/api-extractor": "^7.55.2",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@testcontainers/redis": "^11.9.0",
    "@types/node": "^22.10.2",
    "@types/wait-on": "^5.3.4",
    "@vitest/coverage-v8": "2.1.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^15.13.0",
    "redis": "^5.10.0",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.1",
    "testcontainers": "^11.9.0",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^2.1.8",
    "wait-on": "^9.0.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2"
  }
}
